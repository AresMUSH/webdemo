<div class="row">
 <div class="col col-md-12">
      
     <h1>Forum</h1>
     
     
     <!-- Nav tabs -->
     <ul class="nav nav-tabs" role="tablist">
       <li role="presentation" class="active"><a href="#latest" aria-controls="latest" role="tab" data-toggle="tab">Latest Topics</a></li>
       <li role="presentation"><a href="#categories" aria-controls="categories" role="tab" data-toggle="tab">Categories</a></li>
     </ul>

     <!-- Tab panes -->
     <div class="tab-content">
       <div role="tabpanel" class="tab-pane active" id="latest">
           <div class="panel panel-default">
             <div class="panel-body">
                
                <ul class="list-group">
                
                {{#each model as |topic index|}}
                 <li class="list-group-item">{{#link-to 'forum-topic' topic.id}}
                    <img src="/assets/images/{{topic.lastPost}}.jpg" class="forum-profile-icon" /> {{topic.title}}{{/link-to}} 
                    <span class="badge">{{topic.id}}d</span> {{{if (eq index 0) '<span class="label label-success">New</span>' }}} <span class="clearfix" /></li>
                {{/each}}
                </ul>
                
                
             </div>
           </div>
          </div>
           
           <div role="tabpanel" class="tab-pane" id="categories">
               <div class="panel panel-default">
                 <div class="panel-body">

                <ul class="list-group">
                 <li class="list-group-item"><span class="fa fa-bullhorn fa-2x"></span> <a href="/forum">Announcements</a> <span class="badge">1d</span> <span class="label label-success">New</span></li>
                 <li class="list-group-item"><span class="fa fa-comments fa-2x"></span> <a href="/forum">Discussions</a> <span class="badge">2d</span></li>
                </ul>
                
                 </div>
               </div>
             </div>
       </div>
       
        
    <div class="button-row">
       <span class="btn btn-default" href="#" role="button">New Topic</span>
    </div>
    
  </div>
</div>

{{outlet}}
